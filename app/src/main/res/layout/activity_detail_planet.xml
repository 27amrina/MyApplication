<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DetailPlanetActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#BDBDBD"
        android:elevation="3dp"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title=""
        app:contentInsetStartWithNavigation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Header image -->
    <ImageView
        android:id="@+id/img_top_planet"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        tools:src="@drawable/fixed_mars"
        app:layout_constraintTop_toBottomOf="@id/toolbar_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scroll hanya untuk konten bawah gambar -->
    <ScrollView
        android:id="@+id/sv_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/img_top_planet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="28dp">

            <!-- Card konten -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="20dp">

                    <!-- Baris judul + share -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_planet_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#111111"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingEnd="10dp"
                            tools:text="Mars"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/action_share_planet"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/action_share_planet"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:padding="7dp"
                            android:src="@drawable/ic_share"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            tools:ignore="ContentDescription"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="@id/tv_planet_name"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Divider tipis -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:background="#EEEEEE" />

                    <!-- Deskripsi -->
                    <TextView
                        android:id="@+id/tv_planet_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15.5sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="7dp"
                        android:justificationMode="inter_word"
                        tools:text="Paragraf 1...\n\nParagraf 2...\n\nParagraf 3..." />

                    <!-- QUICK FACTS TITLE -->
                    <TextView
                        android:id="@+id/tv_quick_facts_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/detail_quick_facts"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111" />

                    <!-- QUICK FACTS ROW -->
                    <LinearLayout
                        android:id="@+id/layout_quick_facts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <!-- Baris 1: Tipe + Jarak -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FAFAFA">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_type"
                                        android:textSize="12sp"
                                        android:textColor="#777777" />

                                    <TextView
                                        android:id="@+id/tv_fact_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#111111"
                                        tools:text="Planet Batu" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FAFAFA">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_distance"
                                        android:textSize="12sp"
                                        android:textColor="#777777" />

                                    <TextView
                                        android:id="@+id/tv_fact_distance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#111111"
                                        tools:text="227,9 juta km" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <!-- Baris 2: Rotasi + Revolusi + Suhu -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FAFAFA">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_day"
                                        android:textSize="12sp"
                                        android:textColor="#777777" />

                                    <TextView
                                        android:id="@+id/tv_fact_day"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#111111"
                                        tools:text="24,6 jam" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FAFAFA">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_year"
                                        android:textSize="12sp"
                                        android:textColor="#777777" />

                                    <TextView
                                        android:id="@+id/tv_fact_year"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#111111"
                                        tools:text="687 hari" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                app:cardCornerRadius="14dp"
                                app:cardElevation="2dp"
                                android:backgroundTint="#FAFAFA">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/label_temp"
                                        android:textSize="12sp"
                                        android:textColor="#777777" />

                                    <TextView
                                        android:id="@+id/tv_fact_temp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="#111111"
                                        tools:text="~ -60°C" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                    <!-- FUN FACTS -->
                    <TextView
                        android:id="@+id/tv_funfacts_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:text="@string/detail_fun_facts"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111" />

                    <TextView
                        android:id="@+id/tv_funfacts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textSize="15sp"
                        android:textColor="#444444"
                        android:lineSpacingExtra="6dp"
                        tools:text="• Fakta 1\n• Fakta 2\n• Fakta 3" />

                    <!-- PEMISAH untuk section planet lainnya -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:background="#EEEEEE" />

                    <!-- Section planet lain -->
                    <TextView
                        android:id="@+id/tv_other_planets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_other_planets"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_other_planets"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginTop="10dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        tools:listitem="@layout/item_planet_small" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
